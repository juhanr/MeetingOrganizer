<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    style="@style/FragmentLayout">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="E-mail"
        style="@style/Text" />

    <EditText
        android:id="@+id/email_textbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLength="40"
        style="@style/TextBox" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        style="@style/Text" />

    <EditText
        android:id="@+id/password_textbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/view_margin_large"
        android:inputType="textPassword"
        style="@style/TextBox" />

    <TextView
        android:id="@+id/create_account_textbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create_account"
        style="@style/Text" />

    <include layout="@layout/view_empty_space" />

    <Button
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log in"
        style="@style/Button" />

</LinearLayout>
