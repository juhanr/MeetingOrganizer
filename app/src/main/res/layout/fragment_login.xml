<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	style="@style/FragmentLayout"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:clickable="true"
	android:focusableInTouchMode="true"
	android:layout_height="match_parent"
	android:layout_width="match_parent"
	android:orientation="vertical">

	<TextView
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:text="@string/textview_email"/>

	<EditText
		style="@style/TextBox"
		android:id="@+id/email_textbox"
		android:inputType="textEmailAddress"
		android:layout_height="wrap_content"
		android:layout_width="@dimen/textbox_width_normal"
		android:maxLength="40"/>

	<TextView
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:text="@string/textview_password"/>

	<EditText
		style="@style/TextBox"
		android:id="@+id/password_textbox"
		android:inputType="textPassword"
		android:layout_height="wrap_content"
		android:layout_marginBottom="@dimen/view_margin_large"
		android:layout_width="@dimen/textbox_width_normal"/>

	<TextView
		android:id="@+id/create_account_textbutton"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:text="@string/textview_create_account_u"/>

	<include layout="@layout/view_empty_space"/>

	<Button
		style="@style/RaisedButton"
		android:id="@+id/login_button"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:text="@string/button_login"/>

</LinearLayout>
