<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="CustomActionBarTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/ActionBarStyle</item>
    </style>

    <style name="ActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/chambray_dark</item>
    </style>

    <style name="FragmentLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">@dimen/fragment_margin</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="TextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/alice_blue</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextboxStyle" parent="TextStyle">
        <item name="android:background">@drawable/textbox</item>
        <item name="android:ems">10</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLength">20</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginBottom">@dimen/view_margin_large</item>
        <item name="android:gravity">center|left</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/madison</item>
    </style>

    <style name="ButtonStyle" parent="TextStyle">
        <item name="android:background">@drawable/button</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/view_margin_large</item>
    </style>

    <style name="SpinnerStyle" parent="TextStyle">
        <item name="android:background">@drawable/spinner_bg</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="CheckboxStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/alice_blue</item>
        <item name="android:gravity">center|left</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:button">@drawable/checkbox</item>
    </style>

</resources>
