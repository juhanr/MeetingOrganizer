<resources>

	<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
		<item name="android:buttonStyle">@style/RaisedButtonColored</item>

		<item name="colorPrimary">@color/indigo_500</item>
		<item name="colorPrimaryDark">@color/indigo_700</item>
		<item name="colorAccent">@color/accent</item>

	</style>

	<style name="AppTheme.NoActionBar">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
	</style>

	<style name="ToolbarColoredBackArrow" parent="AppTheme">
		<item name="android:textColorSecondary">@color/dark_gray</item>
	</style>

	<style name="SearchToolbar" parent="AppTheme">
		<item name="drawerArrowStyle">@style/SearchToolbarArrowToggle</item>
		<item name="background">@color/white</item>
		<item name="colorControlNormal">@color/black</item>
	</style>

	<style name="SearchToolbarArrowToggle" parent="Widget.AppCompat.DrawerArrowToggle">
		<item name="color">@color/black</item>
	</style>

	<style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

	<style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

	<style name="FragmentLayout">
		<item name="android:padding">@dimen/fragment_margin</item>
		<item name="android:gravity">center_horizontal</item>
	</style>

	<style name="ListItemLayout">
		<item name="android:paddingLeft">16dp</item>
		<item name="android:paddingRight">16dp</item>
		<item name="android:paddingTop">10dp</item>
		<item name="android:paddingBottom">10dp</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:layout_width">match_parent</item>
	</style>

	<style name="RippleTouchColored" parent="Material.Drawable.Ripple.Touch.Light">
		<item name="rd_backgroundColor">@color/accent_quarter</item>
		<item name="rd_rippleColor">@color/accent_quarter</item>
		<item name="rd_delayClick">untilRelease</item>
	</style>

	<style name="TextPrimary" parent="@android:style/TextAppearance">
		<item name="android:textColor">@color/text_primary</item>
		<item name="android:textSize">16sp</item>
	</style>

	<style name="TextSecondary">
		<item name="android:textColor">@color/text_secondary</item>
		<item name="android:textSize">14sp</item>
	</style>

	<style name="TextHint">
		<item name="android:textColor">@color/text_hint</item>
		<item name="android:textSize">14sp</item>
	</style>

	<style name="TextPrimaryWhite">
		<item name="android:textColor">@color/text_primary_white</item>
		<item name="android:textSize">16sp</item>
	</style>

	<style name="Button" parent="Material.Drawable.Ripple.Touch.Light">
		<item name="android:background">@null</item>
		<item name="rd_cornerRadius">4dp</item>
		<item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Button</item>
		<item name="android:minWidth">64dp</item>
		<item name="android:gravity">center</item>
		<item name="android:layout_height">@dimen/button_height</item>
		<item name="android:layout_width">wrap_content</item>
	</style>

	<style name="FlatButton" parent="Button">
		<item name="android:paddingLeft">8dp</item>
		<item name="android:paddingRight">8dp</item>
		<item name="android:layout_marginLeft">8dp</item>
		<item name="android:layout_marginRight">8dp</item>
	</style>

	<style name="FlatButtonColored" parent="FlatButton">
		<item name="rd_style">@style/RippleTouchColored</item>
		<item name="android:textColor">@color/accent</item>
	</style>

	<style name="RaisedButton" parent="Button">
		<item name="android:background">@drawable/bg_bt_raise</item>
		<item name="rd_leftPadding">1dp</item>
		<item name="rd_topPadding">1dp</item>
		<item name="rd_rightPadding">1dp</item>
		<item name="rd_bottomPadding">2dp</item>
		<item name="android:textColor">@color/abc_primary_text_material_light</item>
		<item name="android:paddingLeft">16dp</item>
		<item name="android:paddingRight">16dp</item>
	</style>

	<style name="RaisedButtonColored" parent="RaisedButton">
		<item name="android:background">@drawable/bg_bt_raise_color</item>
		<item name="rd_rippleColor">#33000000</item>
		<item name="rd_delayClick">untilRelease</item>
		<item name="android:textColor">@color/abc_primary_text_material_dark</item>
	</style>

	<style name="LightEditText" parent="Material.Widget.EditText.Light">
		<!--<item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Large</item>-->
		<item name="android:labelTextSize">12sp</item>
		<item name="android:textSize">16sp</item>
		<item name="android:textColor">@color/abc_primary_text_material_light</item>
		<item name="android:textColorHint">@color/edittext_hint</item>
		<item name="et_dividerColor">@drawable/color_divider_light</item>
		<item name="et_labelTextColor">@drawable/color_label_light</item>
		<item name="et_supportTextErrorColor">#FFFF0000</item>
		<item name="et_dividerErrorColor">#FFFF0000</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">match_parent</item>
	</style>

	<!-- Spinner Style -->

	<style name="LightSpinner" parent="Material.Widget.Spinner.Light">
		<item name="rd_style">@style/Material.Drawable.Ripple.Touch.Light</item>
		<item name="spn_labelEnable">true</item>
		<item name="spn_arrowSwitchMode">true</item>
		<item name="spn_arrowAnimDuration">@android:integer/config_shortAnimTime</item>
		<item name="spn_arrowInterpolator">@android:anim/decelerate_interpolator</item>
		<item name="spn_arrowColor">@color/edittext_divider</item>
		<item name="android:popupBackground">@drawable/abc_popup_background_mtrl_mult</item>
		<item name="spn_dividerColor">@drawable/color_divider_light</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:labelTextSize">12sp</item>
		<item name="android:textSize">16sp</item>
		<item name="android:gravity">left</item>
	</style>

	<style name="LightSpinnerNoArrow" parent="LightSpinner">
		<item name="spn_arrowSize">0dp</item>
		<item name="spn_popupItemAnimation">@anim/abc_fade_in</item>
	</style>

	<style name="LightSpinnerItem" parent="Material.Drawable.Ripple.Touch">
		<item name="rd_rippleColor">@color/accent_quarter</item>
		<item name="rd_rippleAnimDuration">300</item>
		<item name="rd_maskType">rectangle</item>
		<item name="rd_cornerRadius">0dp</item>
		<item name="rd_delayClick">afterRelease</item>
		<item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
		<item name="android:textColor">@color/abc_primary_text_material_light</item>
	</style>

	<style name="DialogTheme" parent="Material.App.Dialog.Simple.Light">
		<item name="di_actionRipple">@style/RippleTouchColored</item>
	</style>

	<style name="DialogTheme.TimePicker" parent="Material.App.Dialog.TimePicker.Light">
		<item name="di_actionRipple">@style/RippleTouchColored</item>
	</style>

	<style name="DialogTheme.DatePicker" parent="Material.App.Dialog.DatePicker.Light">
		<item name="di_actionRipple">@style/RippleTouchColored</item>
	</style>

</resources>
